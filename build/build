ROOT="$(cd "$(dirname "${0}")"; pwd)/.."

command c99 \
	-o "${ROOT}/bin/termpong" \
	-l 'cursesw' \
	-l 'm' \
	-l 'rt' \
	-I "${ROOT}/src" \
	"${@}" \
	"${ROOT}/src/main.c" \
	"${ROOT}/src/gfx/char.c" \
	"${ROOT}/src/lib/stack.c" \
	"${ROOT}/src/mgr/input.c" \
	"${ROOT}/src/mgr/time.c" \
	"${ROOT}/src/obj/ifix/Coord.c" \
	"${ROOT}/src/obj/ifix/Size.c" \
	"${ROOT}/src/obj/ifix/Speed.c" \
	"${ROOT}/src/obj/kind/Ball.c" \
	"${ROOT}/src/obj/kind/Paddle.c" \
	;
